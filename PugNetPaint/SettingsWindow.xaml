<Window x:Class="PugNetPaint.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="âš™ï¸ Settings" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Settings" FontSize="28" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Configure your PugNetPaint experience" FontSize="12" Foreground="#888" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- BETA MODE SECTION -->
                <Border Background="#2d2d2d" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ§ª Beta Mode" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <Border Background="#7C3AED" CornerRadius="5" Padding="5,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="EXPERIMENTAL" FontSize="9" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="Enable experimental features that are still in development. These may be unstable!" 
                                       Foreground="#888" FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleButton x:Name="BetaModeToggle" Grid.Column="1" 
                                      Width="60" Height="30" 
                                      VerticalAlignment="Center"
                                      Click="BetaModeToggle_Click">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="bg" Background="#444" CornerRadius="15" Cursor="Hand">
                                                    <Border x:Name="thumb" Background="White" Width="24" Height="24" CornerRadius="12" 
                                                            HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#10B981"/>
                                                        <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>
                </Border>

                <!-- EXPERIMENTAL FEATURES SECTION (Only visible when Beta Mode is ON) -->
                <Border x:Name="ExperimentalSection" Background="#2d2d2d" CornerRadius="10" Padding="15" Margin="0,0,0,15" Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="ðŸ”¬ Experimental Features" FontSize="14" FontWeight="Bold" Foreground="#7C3AED"/>
                            <TextBlock Text=" (Beta Mode Required)" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Border BorderBrush="#444" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,5,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“¸ Experimental PNG/JPEG Export with History" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                    <TextBlock Foreground="#888" FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap">
                                        <Run Text="GROUNDBREAKING: Embed your stroke/undo history directly INTO exported PNG/JPEG images! "/>
                                        <LineBreak/>
                                        <Run Text="When you open these images later in PugNetPaint, your drawing history is restored!"/>
                                    </TextBlock>
                                    <Border Background="#1e1e1e" CornerRadius="5" Padding="8" Margin="0,8,0,0">
                                        <TextBlock Foreground="#F59E0B" FontSize="10" TextWrapping="Wrap">
                                            <Run Text="âš ï¸ Note: This slightly increases file size due to embedded metadata."/>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                                <ToggleButton x:Name="HistoryExportToggle" Grid.Column="1" 
                                              Width="60" Height="30" 
                                              VerticalAlignment="Top" Margin="10,0,0,0"
                                              Click="HistoryExportToggle_Click">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="bg" Background="#444" CornerRadius="15" Cursor="Hand">
                                                            <Border x:Name="thumb" Background="White" Width="24" Height="24" CornerRadius="12" 
                                                                    HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="bg" Property="Background" Value="#7C3AED"/>
                                                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Info Section -->
                <Border Background="#1e3a5f" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ About Experimental Features" FontSize="12" FontWeight="Bold" Foreground="#60A5FA"/>
                        <TextBlock Foreground="#93C5FD" FontSize="11" Margin="0,8,0,0" TextWrapping="Wrap">
                            <Run Text="Experimental features are cutting-edge additions that are still being refined. "/>
                            <Run Text="They may have bugs or unexpected behavior. Use at your own risk, but also... have fun exploring the future! ðŸš€"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Close" Click="Close_Click" Padding="20,10" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
