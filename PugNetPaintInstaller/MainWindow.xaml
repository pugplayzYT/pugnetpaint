<Window x:Class="PugNetPaintInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PugNetPaintInstaller"
        mc:Ignorable="d"
        Title="PugNetPaint Installer" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Icon="icon.ico"
        Background="#1e1e1e">

    <Grid>
        <!-- Background/Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="#2d2d2d" BorderBrush="#444" BorderThickness="0,0,0,1">
            <TextBlock Text="PugNetPaint Setup" VerticalAlignment="Center" Margin="20,0" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Pages Container -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Page 1: Welcome -->
            <StackPanel Name="PageWelcome" Visibility="Visible">
                <TextBlock Text="Welcome to the PugNetPaint Installer" Foreground="White" FontSize="24" Margin="0,0,0,20"/>
                <TextBlock Text="This wizard will install PugNetPaint on your computer." Foreground="#aaa"/>
                <TextBlock Text="Please close any running instances of PugNetPaint." Foreground="#aaa" FontStyle="Italic" Margin="0,10,0,0"/>
                <TextBlock Text="Click Next to continue." Foreground="#aaa" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Page 2: Location -->
            <StackPanel Name="PageLocation" Visibility="Collapsed">
                <TextBlock Text="Choose Install Location" Foreground="White" FontSize="24" Margin="0,0,0,20"/>
                <TextBlock Text="Select the installation folder:" Foreground="#aaa" Margin="0,0,0,10"/>
                <TextBox Name="InstallPathTxt" Height="30" VerticalContentAlignment="Center" Background="#333" Foreground="White" BorderBrush="#555"/>
                <TextBlock Text="Space Required: Approximately 200MB" Foreground="#777" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Page 3: Installing -->
            <StackPanel Name="PageInstalling" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="Installing..." Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <ProgressBar Name="InstallProgress" Height="20" Background="#333" Foreground="Green"/>
                <TextBlock Name="StatusTxt" Text="Preparing..." Foreground="#aaa" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Page 4: Finish -->
            <StackPanel Name="PageFinish" Visibility="Collapsed">
                <TextBlock Text="Installation Complete!" Foreground="Green" FontSize="24" Margin="0,0,0,20"/>
                <TextBlock Text="PugNetPaint has been successfully installed." Foreground="#aaa"/>
                <CheckBox Name="LaunchChk" Content="Launch PugNetPaint" IsChecked="True" Foreground="White" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Footer / Buttons -->
        <Border Grid.Row="2" Background="#252525" BorderBrush="#444" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                <Button Name="CancelBtn" Content="Cancel" Click="Cancel_Click" Width="80" Height="30" Margin="0,0,10,0" Background="#444" Foreground="White" BorderThickness="0"/>
                <Button Name="NextBtn" Content="Next" Click="Next_Click" Width="80" Height="30" Background="Green" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
